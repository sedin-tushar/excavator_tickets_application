<head>
<style>
table {
  width: 100%;
  border-collapse: collapse;
  margin-bottom: 20px;
}

th, td {
  padding: 10px;
  text-align: left;
  border-bottom: 1px solid #ddd;
}

thead th {
  background-color: #f2f2f2;
}

th a {
  display: block;
  color: #000;
  text-decoration: none;
}

th a:hover {
  text-decoration: underline;
}

td:first-child {
  padding-left: 20px;
}
.primary{
  text-align: center;
  text-decoration: none;
  color: #000;
}
.no-underline {
  text-decoration: none;
}
</style>
</head>
<h1>Tickets</h1>

<table id="tickets-table" class="sortable">
  <thead>
    <tr>
      <th>Request Number</th>
      <th>Sequence Number</th>
      <th>Request Type</th>
      <th>Primary Service Area Code</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.request_number%></td>
        <td><%= ticket.sequence_number %></td>
        <td><%= ticket.request_type %></td>
        <td><%= ticket.sacode %></td>
        <td>
        <button class="primary">
          <%= link_to "show", ticket_path(ticket), class: "no-underline" %>
        </button>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>
